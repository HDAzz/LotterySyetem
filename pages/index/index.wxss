/**index.wxss**/
page {
    height: 100%;
}

.container {
    /* background: radial-gradient(#79ACED,rgb(52, 129, 230) ); */
    background: radial-gradient(rgb(58, 193, 211), rgb(81, 138, 245));
    position: relative;
}

.headerContainer {
    width: 100%;
    height: 120rpx;
}

.userInfoContainer {
    /* background-color: #79ACED; */
    width: 100%;
    height: calc(100%*556/1334);
    /* 子元素中心居中 水平排列 */
    display: flex;
    align-items: center;
    justify-content: center;
}

.userInfoBox {
    width: 380rpx;
    height: 380rpx;
    margin-bottom: 40rpx;
    background-color: #F2F0F2;
    border-radius: 80rpx;
}

.functionsContainer {
    width: 100%;
    height: calc(100%*830/1334);
    position: absolute;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: center; */
    border-top-left-radius: 150rpx;
    border-top-right-radius: 150rpx;
    background-color: #F2F0F2;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #aaa;
    font-size: 40rpx;
    /* background-color: red; */
}

.avatar {
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
}

.userinfo-avatar {
    /* overflow: hidden;
    width: 192rpx;
    height: 192rpx;
    margin: 50rpx;
    border-radius: 50%; */
    display: flex;
    padding: 0;
    /* width: 56px !important;
     */
    border-radius: 8px;
    margin-top: 80rpx;
    margin-bottom: 20rpx;
}

.addLot {
    margin-top: 130rpx;
    height: 230rpx;
    width: 230rpx;
}

.funcBtn {
    width: 499rpx;
    height: 130rpx;
    margin-top: 70rpx;
    display: flex;
    position: relative;
    /* justify-content: center; */
    /* 垂直居中 */
    align-items: center;
}

.btn-img {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 30rpx;
}

.btn-text {
    font-family: 'PingFangSC';
    position: absolute;
    left: 170rpx;
    font-size: 30rpx;
    color: #1A38A1;
}

.btn-arrow {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 10rpx;
}

.choices {
    /* background-color: #7C96EB; */
    background: radial-gradient(rgb(81, 138, 245), rgb(58, 193, 211));
    /* background: radial-gradient(rgb(126, 213, 224), rgb(90, 147, 173)); */
    margin-top: 120rpx;
    height: 200rpx;
    width: 500rpx;
    border-radius: 40rpx;
    padding-top: 15rpx;
    padding-bottom: 30rpx;
}

.choice {
    margin-top: 20rpx!important;
    border-radius: 20rpx!important;
    width: 400rpx!important;
    background-color: #E4E2E6!important;
    color: #273AA3!important;
}

.secret {
    position: absolute;
    top: 50rpx;
    border-radius: 40rpx;
    background-color: #FFF;
    height: 400rpx;
    width: 500rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 25rpx;
    padding-right: 25rpx;
}

.secret_text {
    color: #4A5ECF;
    font-weight: bold;
    margin-top: 30rpx;
    font-size: 50rpx;
    padding-bottom: 10rpx;
}

.verificationCode {
    overflow: hidden;
    position: relative;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-top: 10px;
    margin-bottom: 40rpx;
}

.verificationCode>input {
    width: calc(200%);
    position: absolute;
    left: -100px;
    /* top: 20px; */
    height: 60px;
    background: #e9e9e9;
    opacity: 0;
    font-size: 10px;
}

.verificationCode>view {
    width: 100rpx;
    border: 1rpx solid #979797;
    height: 100rpx;
    text-align: center;
    line-height: 60px;
    border-radius: 4px;
    font-size: 30px;
    color: #4DBF6E;
}

.verificationCode .activeView {
    border-color: #4DBF6E;
}
.getInfoBox{
    /* background-color:red; */
